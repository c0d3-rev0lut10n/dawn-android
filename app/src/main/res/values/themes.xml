<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dawn" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="Theme.Dawn.Light" parent="Theme.Dawn">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Dawn.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Dawn.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Dawn.Dark" parent="Theme.Dawn">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="mainColor">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColorEmphasize">@color/white</item>
        <item name="backgroundColor">@color/dark_background</item>
        <item name="actionBarColor">@color/dark_secondary</item>
        <item name="hintTextColor">@color/white</item>
        <item name="textFieldBackgroundColor">@color/dark_background_contrast</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Dawn.ExtraDark" parent="Theme.Dawn">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/x_dark_primary</item>
        <item name="mainColor">@color/x_dark_primary</item>
        <item name="colorPrimaryVariant">@color/x_dark_secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/x_dark_primary</item>
        <item name="textColorEmphasize">@color/x_dark_primary_emphasized</item>
        <item name="backgroundColor">@color/black</item>
        <item name="actionBarColor">@color/black</item>
        <item name="hintTextColor">@color/x_dark_primary</item>
        <item name="textFieldBackgroundColor">@color/x_dark_background_contrast</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Dawn.TextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">?attr/hintTextColor</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="boxBackgroundColor">?attr/textFieldBackgroundColor</item>
    </style>

    <style name="Theme.Dawn.TextField.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">?attr/hintTextColor</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="boxBackgroundColor">?attr/textFieldBackgroundColor</item>
    </style>

    <style name="Theme.Dawn.Dialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:textColorPrimary">?android:attr/textColor</item>
        <item name="colorPrimary">?attr/mainColor</item>
        <item name="backgroundTint">?attr/backgroundColor</item>
    </style>
</resources>